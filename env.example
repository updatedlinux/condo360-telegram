# Configuración del servidor
PORT=6000
NODE_ENV=development

# Configuración de WordPress
WP_URL=https://tudominio-wordpress.com
WP_USER=usuario_app
WP_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# Configuración de base de datos MySQL (misma DB de WordPress)
DB_HOST=localhost
DB_PORT=3306
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_db
DB_NAME=wordpress_db

# Zona horaria
TIMEZONE=America/Caracas

# Configuración de Telegram (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=

# Configuración de Redis (opcional, para colas de trabajo)
REDIS_URL=redis://localhost:6379

# Configuración de optimización de imágenes
ENABLE_IMAGE_OPTIMIZATION=true

# Directorio de logs
LOG_DIR=./logs

# Límites de archivo
MAX_FILE_SIZE_MB=10

# Configuración de Swagger
SWAGGER_TITLE=Condo360 WordPress API
SWAGGER_DESCRIPTION=API para automatizar creación y eliminación de posts en WordPress desde archivos .docx
SWAGGER_VERSION=1.0.0

